<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    android:layout_width="fill_parent"
    android:layout_height="250dp"
    android:layout_margin="20dp"
    android:clickable="false"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/colorAccent"
    card_view:cardCornerRadius="30dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/relative1">

        <TextView
            android:id="@+id/consultorio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dip"
            android:paddingEnd="10dip"
            android:paddingStart="10dip"
            android:paddingTop="10dip"
            android:text="@string/text_view_consultorio"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_consultorio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/consultorio"
            android:paddingLeft="15dp"
            android:paddingStart="15dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_consultorio"
            android:paddingBottom="10dip"
            android:paddingEnd="10dip"
            android:paddingStart="10dip"
            android:paddingTop="50dip"
            android:text="@string/text_view_senha"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/senha"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="40dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />


</RelativeLayout>