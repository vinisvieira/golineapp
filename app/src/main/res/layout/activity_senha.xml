<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dfdfdf"
    android:orientation="vertical">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:layout_margin="20dp"
        android:clickable="false"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardBackgroundColor="@color/cardview_light_background"
        card_view:cardCornerRadius="20dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/relative1">

            <TextView
                android:id="@+id/consultorio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dip"
                android:paddingEnd="10dip"
                android:paddingStart="10dip"
                android:paddingTop="10dip"
                android:text="@string/text_view_consultorio"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_view_consultorio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/consultorio"
                android:paddingLeft="15dp"
                android:paddingStart="15dp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/senha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dip"
                android:paddingEnd="10dip"
                android:paddingStart="10dip"
                android:paddingTop="50dip"
                android:text="@string/text_view_senha"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_below="@+id/consultorio"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="12dp" />

            <TextView
                android:id="@+id/text_view_senha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/senha"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="40dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="192dp"
            android:layout_height="129dp"
            android:layout_gravity="center"
            android:text="@string/texto_img_button"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/button_mapa"
            android:layout_width="match_parent"
            android:layout_height="173dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_google_maps" />


    </LinearLayout>

</LinearLayout>
