<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="false"
    android:layout_margin="20dp"
    android:id="@+id/card_view"
    android:layout_width="fill_parent"
    android:layout_height="250dp"
    card_view:cardBackgroundColor="@color/colorAccent"
    card_view:cardCornerRadius="30dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/consultorio"
            android:text="@string/text_view_consultorio"
            android:textColor="@color/colorPrimary"
            android:textSize="30dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:paddingTop="10dip"
            android:paddingBottom="10dip"
            android:paddingStart="10dip"
            android:paddingEnd="10dip"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/consultorio"
            android:id="@+id/text_view_consultorio"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:textSize="25dp"
            android:paddingStart="15dp"
            android:paddingLeft="15dp"
          />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_consultorio"
            android:id="@+id/senha"
            android:text="@string/text_view_senha"
            android:textColor="@color/colorPrimary"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:paddingTop="50dip"
            android:paddingBottom="10dip"
            android:paddingStart="10dip"
            android:paddingEnd="10dip"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/senha"
            android:id="@+id/text_view_senha"
            android:textColor="@color/colorPrimary"
            android:textSize="40dp"
            android:textAlignment="center"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>
